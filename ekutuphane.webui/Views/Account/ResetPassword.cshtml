@{Layout = "_LayoutNoCategories";}
@model ResetPasswordModel
<form asp-controller="Account" asp-action="ResetPassword" class="ml-3 row" >
<div class="col-8">
<div class="mb-3">
<div asp-validation-summary="All" class="text-danger"></div>
  <label  class="form-label">Şifre</label>
  <input class="form-control" asp-for="Password">
</div>
<input type="hidden" asp-for="Token" value="@Model.Token">
<input type="hidden" asp-for="UserId" value="@Model.UserId">
<div class="mb-3">
  <label  class="form-label">Şifre Doğrulama</label>
  <input class="form-control" asp-for="RePassword">
</div>
<button type="submit" class="btn btn-primary">Sıfırla</button>
</div>
</form>