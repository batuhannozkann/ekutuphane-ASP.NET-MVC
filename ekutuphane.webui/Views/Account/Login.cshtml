@{Layout="_LayoutNoCategories";}
@model LoginModel
<div class="row mt-5">
<div class="col-3">
</div>
<div class="text-center col-6">
<main class="form-signin container-fluid ">
  <form method="POST" asp-controller="Account" asp-action="Login">
  <div class="text-danger" asp-validation-summary="All"></div>
    <img class="mb-4" src="~/images/logo-png.png" alt="" width="120" height="57">
    <h1 class="h3 mb-3 fw-normal">LÜTFEN GİRİŞ YAPINIZ</h1>
    <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
    <div class="form-floating">
        <label class="font-weight-bold" >Kullanıcı Adı</label>
      <input type="text" class="form-control" asp-for="Username" placeholder="username1234">
    </div>
    <div class="form-floating">
    <label for="floatingPassword" class="font-weight-bold">Şifre</label>
      <input type="password" class="form-control" asp-for="Password" placeholder="Password">
    </div>
    <a asp-controller="Account" asp-action="ForgotPassword">Şifremi Unuttum</a>
    <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş Yap</button>
  </form>
</main>
</div>
<div class="col-3">
</div>
</div>