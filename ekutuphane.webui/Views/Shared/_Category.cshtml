@model List<Category>
<div class="list-group col-sm-2 mt-5">

          <a asp-controller="Library" asp-action="BookList" asp-route-kategori="" class="list-group-item list-group-item-action @(ViewBag.RouteCat==null?"active":" ")" aria-current="true">
          Kategoriler
          </a>
    
    @foreach(var cat in Model)
    {
        
        <a asp-controller="Library" asp-action="BookList" asp-route-kategori="@cat.CategoryName" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory?.ToLower()==cat.CategoryName.ToLower()?"active":" ")">@cat.CategoryName</a>
    }
</div>